%% -*- erlang -*-
{sub_dirs, ["rel", "apps/riemann_syslog"]}.

{cover_enabled, true}.

{erl_opts, [debug_info, warnings_as_errors]}.

{edoc_opts, [{dir, "../../doc"}]}.

{parse_transform, lager_transform}.

{deps, [
  {riemann, ".*", {git, "https://github.com/CamShaft/erlang_riemann.git", "master"}},
  {lager, "1.2.*", {git, "https://github.com/basho/lager", {tag, "1.2.2"}}},
  {syslog_drain, ".*", {git, "https://github.com/CamShaft/syslog-drain.git", "master"}},
  {syslog_drain_ws, ".*", {git, "https://github.com/CamShaft/syslog-drain-ws.git", "master"}},
  {syslog_message_keyvalue, ".*", {git, "https://github.com/CamShaft/syslog-message-keyvalue.git", "master"}}
]}.
